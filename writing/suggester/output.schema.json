{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "suggestion": {
      "type": "string",
      "description": "Single word or concise sentence"
    },
    "reason": {
      "type": "string",
      "description": "1-2 concise sentences explaining the suggestion"
    }
  },
  "required": ["suggestion", "reason"]
}

